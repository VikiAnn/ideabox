%h1 IdeaBox
%form{:action => "/", :method => "POST"}
  %p
    Your Idea:
  %input{:name => "idea[title]", :type => "text", :placeholder => "Title"}
  %br
  %textarea{:name => "idea[description]", :placeholder => "Description"}
  %br
  %textarea{:name => "idea[tag]", :placeholder => "Tag"}
  %br
  %input{:type => "submit"}
%h3 Existing Ideas
%ul
  - ideas.each do |idea|
    %li
      %a{:href => "/#{idea.id}/view"}= idea.title
      %br
      id: #{idea.id}
      %br
      = idea.description
      %form{:action => "/#{idea.id}/like", :method => "POST", :style => "display: inline"}
        %input{:name => "route", :type => "hidden", :value => "/"}
        %input{:type => "submit", :value => "+"}
      %form{:action => "/#{idea.id}/unlike", :method => "POST", :style => "display: inline"}
        %input{:name => "route", :type => "hidden", :value => "/"}
        %input{:type => "submit", :value => "-"}
      %a{:href => "/#{idea.id}/edit"} Edit
